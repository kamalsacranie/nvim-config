def math():
    synlist = vim.eval(
        """map(synstack(line('.'), col('.')), 'synIDattr(v:val, "name")')"""
    )
    
    # Catching emply list
    # echo map(synstack(line('.'), col('.')), 'synIDattr(v:val, "name")')
    if not any(synlist):
        return False

    if "texMathTex" in synlist[-1]:
        return False
    elif any("Math" in string for string in synlist):
        return True
    elif "pandocLaTeXRegion" in synlist:
        return True
    else:
        return False
endglobal

